<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/bluish_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/transactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            tools:text="February 26th 2019, 11:07:43 AM" />

        <ListView
            android:id="@+id/guardiansListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            tools:layout_height="50dp"
            tools:listitem="@layout/approvals_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/transactionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="ETH 674.15" />

            <View
                android:layout_width="60dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/transactionDollarValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="$100,000.00" />

        </LinearLayout>

        <TextView
            android:id="@+id/transactionRemoteAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0x90F8bf6A479f320ead074411a4B0e7944Ea8c9C1ZZZ" />

        <TextView
            android:id="@+id/transactionComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TX-101" />

    </LinearLayout>
</LinearLayout>